{
	"opts": {
		"template": "./better-docs",
		"encoding": "utf8",
		"destination": "./docs/",
		"recurse": true,
		"readme": "./README.md",
		"access": "all"
	},
	"plugins": [
		"./better-docs/typescript"
	],
	"recurseDepth": 10,
	"source": {
		"include": ["./"],
		"exclude": ["./node_modules/", "./better-docs/"],
		"includePattern": ".+\\.(jsx|js|tsx|ts)$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": ["jsdoc","closure"]
	}
}

